<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <!-- Slayer Master card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSlayer"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSlayerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slayer Master"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/tvSlayerRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Region: â€”"
                android:textSize="14sp"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/tvSlayerBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="No task. Tap Pick to choose a region &amp; monster."
                android:textSize="14sp"
                tools:ignore="HardcodedText"/>

            <ProgressBar
                android:id="@+id/progSlayer"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="12dp"
                android:max="100"
                android:progress="0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnSlayerPick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick"
                    tools:ignore="HardcodedText"/>

                <Button
                    android:id="@+id/btnSlayerAbandon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Abandon"
                    tools:ignore="HardcodedText"/>

                <Button
                    android:id="@+id/btnSlayerClaim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Claim"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Basecamp tiles -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerBasecamp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardSlayer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_basecamp_tile"/>

</androidx.constraintlayout.widget.ConstraintLayout>
