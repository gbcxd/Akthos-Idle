<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title row -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Battle"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <!-- Enemy name / level -->
        <TextView
            android:id="@+id/tvEnemy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monster (Lvl 1)"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <!-- Enemy HP bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enemy"
                android:layout_marginEnd="8dp"/>

            <ProgressBar
                android:id="@+id/barEnemy"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_weight="1"
                android:max="100"/>

            <TextView
                android:id="@+id/tvEnemyPct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Player HP bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You"
                android:layout_marginEnd="8dp"/>

            <ProgressBar
                android:id="@+id/barPlayer"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_weight="1"
                android:max="100"/>

            <TextView
                android:id="@+id/tvPlayerPct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Quick stats line -->
        <LinearLayout
            android:id="@+id/lineStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvAtk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atk 0"/>
            <TextView
                android:id="@+id/tvDef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Def 0"
                android:layout_marginStart="12dp"/>
            <TextView
                android:id="@+id/tvSpd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Spd 0"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Fight toggle + auto respawn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnFight"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Fight"/>

            <CheckBox
                android:id="@+id/cbAutoRespawn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto respawn"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Monster art placeholder -->
        <ImageView
            android:id="@+id/imgMonster"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:contentDescription="monster"
            android:src="@drawable/ic_shield"/>

        <!-- Loot panel -->
        <LinearLayout
            android:id="@+id/panelLoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/slot_background"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loot"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="6dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <TextView
                android:id="@+id/tvNoLoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No loot yet."
                android:paddingTop="4dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnCollect"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Collect Loot"
                android:layout_marginTop="8dp"
                android:enabled="false"/>
        </LinearLayout>

        <!-- spacer so bottom nav never overlaps -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="64dp"/>
    </LinearLayout>
</ScrollView>
