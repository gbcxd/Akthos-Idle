<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Enemy header -->
        <TextView
            android:id="@+id/tvEnemy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enemy"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <!-- Enemy HP bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/barEnemy"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:max="100" />

            <TextView
                android:id="@+id/tvEnemyPct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:text="100%" />
        </LinearLayout>

        <!-- Player HP bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ProgressBar
                android:id="@+id/barPlayer"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:max="100" />

            <TextView
                android:id="@+id/tvPlayerPct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:text="100%" />
        </LinearLayout>

        <!-- Atk / Def / Spd row (one label your fragment fills) -->
        <TextView
            android:id="@+id/tvStatsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="8dp" />

        <!-- Quick Heal + Fight + Auto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnQuickHeal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Heal" />

            <Button
                android:id="@+id/btnFight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Fight" />

            <CheckBox
                android:id="@+id/cbAutoRespawn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Auto" />
        </LinearLayout>

        <!-- Combat log -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Combat log"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCombatLog"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:overScrollMode="never" />

        <!-- Loot header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loot"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/tvNoLoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(No loot)"
            android:visibility="gone"
            android:layout_marginTop="6dp" />

        <Button
            android:id="@+id/btnCollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collect"
            android:enabled="false"
            android:layout_marginTop="8dp" />

        <!-- Optional monster image placeholder -->
        <ImageView
            android:id="@+id/imgMonster"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- Legacy placeholders (still referenced in older code paths) -->
        <TextView
            android:id="@+id/tvAtk"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tvDef"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tvSpd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
