<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:gravity="center"
    android:layout_width="88dp" android:layout_height="100dp" android:padding="8dp">
    <ImageView android:id="@+id/icon" android:layout_width="48dp" android:layout_height="48dp"/>
    <TextView android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:maxLines="1" android:ellipsize="end"/>
    <TextView android:id="@+id/qty" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
