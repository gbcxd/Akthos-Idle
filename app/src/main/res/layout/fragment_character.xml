<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/p_screen_pad">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipment"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Buff chips container -->
        <LinearLayout
            android:id="@+id/boxBuffs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <!-- Combat buffs (hidden if 0%) -->
            <LinearLayout
                android:id="@+id/chipCombat"
                style="@style/ChipRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/combatIcons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/tvCombatPct"
                    style="@style/ChipPct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%" />
            </LinearLayout>

            <!-- Non-combat buffs (hidden if 0%) -->
            <LinearLayout
                android:id="@+id/chipNonCombat"
                style="@style/ChipRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/nonCombatIcons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/tvNonCombatPct"
                    style="@style/ChipPct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%" />
            </LinearLayout>
        </LinearLayout>

        <!-- ====== DIAMOND EQUIPMENT USING 3 COLUMNS ====== -->
        <LinearLayout
            android:id="@+id/equipColumns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/p_section_pad">

            <!-- Column 1 -->
            <LinearLayout
                android:id="@+id/colLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="32dp">

                <ImageButton
                    android:id="@+id/slot_weapon"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_gloves"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_bow"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />
            </LinearLayout>

            <!-- Column 2 -->
            <LinearLayout
                android:id="@+id/colCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/slot_helmet"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_armor"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_pants"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_boots"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />
            </LinearLayout>

            <!-- Column 3 -->
            <LinearLayout
                android:id="@+id/colRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="32dp">

                <ImageButton
                    android:id="@+id/slot_cape"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_shield"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_ring"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />
            </LinearLayout>

        </LinearLayout>
        <!-- ====== /DIAMOND EQUIPMENT USING 3 COLUMNS ====== -->

        <!-- ONE ROW: Potions (left) • Stats (center, expands) • Food (right) -->
        <LinearLayout
            android:id="@+id/rowPotionsStatsFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/p_section_pad">

            <!-- Potions button -->
            <ImageButton
                android:id="@+id/btnPotions"
                style="@style/SlotButtonSmall"
                android:layout_width="@dimen/slot_small"
                android:layout_height="@dimen/slot_small"
                android:contentDescription="Potions" />

            <!-- Stats chip expands -->
            <LinearLayout
                android:id="@+id/chipStats"
                style="@style/ChipRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_sword" />
                <TextView
                    android:id="@+id/tvAtkVal"
                    style="@style/ChipStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_shield" />
                <TextView
                    android:id="@+id/tvDefVal"
                    style="@style/ChipStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_heart" />
                <TextView
                    android:id="@+id/tvHpVal"
                    style="@style/ChipStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </LinearLayout>

            <!-- Food button (clickable chip) -->
            <LinearLayout
                android:id="@+id/btnFood"
                style="@style/ChipRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="48dp">

                <ImageView
                    android:id="@+id/imgFood"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_food_apple" />

                <TextView
                    android:id="@+id/tvFoodHeals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="+0"
                    android:textColor="@color/green_text"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Optional bottom padding so last row isn't under the nav -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
    </LinearLayout>
</ScrollView>
