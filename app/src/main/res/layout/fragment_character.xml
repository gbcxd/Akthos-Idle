<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/p_screen_pad">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipment"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Buff chips container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <!-- Combat buffs -->
            <LinearLayout
                android:id="@+id/chipCombat"
                style="@style/ChipRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/combatIcons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/tvCombatPct"
                    style="@style/ChipPct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23%" />
            </LinearLayout>

            <!-- Non-combat buffs -->
            <LinearLayout
                android:id="@+id/chipNonCombat"
                style="@style/ChipRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/nonCombatIcons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="start|center_vertical"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/tvNonCombatPct"
                    style="@style/ChipPct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18%" />
            </LinearLayout>
        </LinearLayout>

        <!-- ====== DIAMOND EQUIPMENT USING 3 COLUMNS ====== -->
        <LinearLayout
            android:id="@+id/equipColumns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/p_section_pad">

            <!-- Column 1 (left) : WEAPON • GLOVES • BOW -->
            <!-- Add top padding to shift down and form the diamond -->
            <LinearLayout
                android:id="@+id/colLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="32dp">

                <ImageButton
                    android:id="@+id/slot_weapon"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_gloves"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_bow"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />
            </LinearLayout>

            <!-- Column 2 (center) : HELMET • ARMOR • PANTS • BOOTS -->
            <LinearLayout
                android:id="@+id/colCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/slot_helmet"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_armor"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_pants"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_boots"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />
            </LinearLayout>

            <!-- Column 3 (right) : CAPE • SHIELD • RING -->
            <!-- Same top padding as left for symmetry -->
            <LinearLayout
                android:id="@+id/colRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="32dp">

                <ImageButton
                    android:id="@+id/slot_cape"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <ImageButton
                    android:id="@+id/slot_shield"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />

                <!-- One ring only -->
                <ImageButton
                    android:id="@+id/slot_ring"
                    style="@style/SlotButton"
                    android:layout_width="@dimen/slot_size"
                    android:layout_height="@dimen/slot_size" />
            </LinearLayout>

        </LinearLayout>
        <!-- ====== /DIAMOND EQUIPMENT USING 3 COLUMNS ====== -->

        <!-- Small potions button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/slot_gap"
            android:gravity="start|center_vertical">
            <ImageButton
                android:id="@+id/btnPotions"
                style="@style/SlotButtonSmall"
                android:layout_width="@dimen/slot_small"
                android:layout_height="@dimen/slot_small"
                android:contentDescription="Potions" />
        </LinearLayout>

        <!-- Stats chip + food chip row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/p_section_pad">

            <!-- Stats chip -->
            <LinearLayout
                android:id="@+id/chipStats"
                style="@style/ChipRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_sword" />
                <TextView
                    android:id="@+id/tvAtkVal"
                    style="@style/ChipStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_shield" />
                <TextView
                    android:id="@+id/tvDefVal"
                    style="@style/ChipStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_heart" />
                <TextView
                    android:id="@+id/tvHpVal"
                    style="@style/ChipStat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </LinearLayout>

            <!-- Food chip -->
            <LinearLayout
                android:id="@+id/chipFood"
                style="@style/ChipRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp">
                <ImageView
                    android:id="@+id/imgFood"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_food_apple" />
                <TextView
                    android:id="@+id/tvFoodHeals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+0"
                    android:textStyle="bold"
                    android:textColor="@color/green_text"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
