<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/currency_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Gold -->
        <LinearLayout
            android:id="@+id/cell_gold"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_currency_pill">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/amount_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0" />

            <!-- NEW: Plus button -->
            <ImageButton
                android:id="@+id/btn_add_gold"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add_gold"
                android:padding="0dp"
                android:src="@android:drawable/ic_input_add"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>


        <!-- Slayer -->
        <LinearLayout
            android:id="@+id/cell_slayer"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_currency_pill">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/amount_slayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0" />
        </LinearLayout>

        <!-- Silver -->
        <LinearLayout
            android:id="@+id/cell_silver"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_currency_pill">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/amount_silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0" />
        </LinearLayout>


    </LinearLayout>
</HorizontalScrollView>
