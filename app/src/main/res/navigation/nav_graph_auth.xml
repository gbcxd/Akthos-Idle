<!-- res/navigation/nav_graph_auth.xml -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_auth"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.obliviongatestudio.akthosidle.ui.auth.LoginFragment"
        android:label="Login">
        <!-- Login → Create -->
        <action
            android:id="@+id/action_login_to_create"
            app:destination="@id/createAccountFragment" />
    </fragment>

    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.obliviongatestudio.akthosidle.ui.auth.CreateAccountFragment"
        android:label="Create Account">
        <!-- Create → Login -->
        <action
            android:id="@+id/action_create_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>
