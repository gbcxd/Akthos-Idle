<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_battle">

    <!-- Core tabs -->
    <fragment
        android:id="@+id/nav_battle"
        android:name="com.obliviongatestudio.akthosidle.ui.BattleFragment"
        android:label="Battle"
        tools:layout="@layout/fragment_battle" />

    <fragment
        android:id="@+id/nav_character"
        android:name="com.obliviongatestudio.akthosidle.ui.CharacterFragment"
        android:label="Character"
        tools:layout="@layout/fragment_character" />

    <fragment
        android:id="@+id/nav_inventory"
        android:name="com.obliviongatestudio.akthosidle.ui.InventoryFragment"
        android:label="Inventory"
        tools:layout="@layout/fragment_inventory" />

    <fragment
        android:id="@+id/nav_skills"
        android:name="com.obliviongatestudio.akthosidle.ui.SkillsFragment"
        android:label="Skills"
        tools:layout="@layout/fragment_skills">
        <action
            android:id="@+id/action_nav_skills_to_skillDetail"
            app:destination="@id/skillDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/skillDetailFragment"
        android:name="com.obliviongatestudio.akthosidle.ui.skill.SkillDetailFragment"
        android:label="Skill"
        tools:layout="@layout/fragment_skill_detail">
        <argument
            android:name="skillId"
            app:argType="string"
            android:defaultValue="MINING" />
    </fragment>

    <!-- Bottom tab “Settings” actually opens Basecamp -->
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.obliviongatestudio.akthosidle.ui.basecampFragment"
        android:label="Basecamp"
        tools:layout="@layout/fragment_basecamp" />

    <!-- Store / Shop -->
    <fragment
        android:id="@+id/shopFragment"
        android:name="com.obliviongatestudio.akthosidle.ui.store.shopFragment"
        android:label="Shop"
        tools:layout="@layout/fragment_shop" />

    <!-- Buy Gold (toolbar + shop) -->
    <fragment
        android:id="@+id/buyGoldFragment"
        android:name="com.obliviongatestudio.akthosidle.ui.store.BuyGoldFragment"
        android:label="@string/buy_gold_title"
        tools:layout="@layout/fragment_buy_gold" />

    <!-- Basecamp tiles -->
    <fragment
        android:id="@+id/questsFragment"
        android:name="com.obliviongatestudio.akthosidle.ui.questsFragment"
        android:label="Quests"
        tools:layout="@layout/fragment_quests" />

    <fragment
        android:id="@+id/achievementsFragment"
        android:name="com.obliviongatestudio.akthosidle.ui.achievementsFragment"
        android:label="Achievements"
        tools:layout="@layout/fragment_achievements" />

    <fragment
        android:id="@+id/bankFragment"
        android:name="com.obliviongatestudio.akthosidle.ui.stashFragment"
        android:label="Stash"
        tools:layout="@layout/fragment_stash" />

    <fragment
        android:id="@+id/forgeFragment"
        android:name="com.obliviongatestudio.akthosidle.ui.forgeFragment"
        android:label="Forge"
        tools:layout="@layout/fragment_forge" />

    <!-- Options (settings/backup) -->
    <fragment
        android:id="@+id/optionsFragment"
        android:name="com.obliviongatestudio.akthosidle.ui.optionsFragment"
        android:label="Options"
        tools:layout="@layout/fragment_options" />

    <!-- About -->
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.obliviongatestudio.akthosidle.ui.aboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />

    <!-- Cooking -->
    <fragment
        android:id="@+id/cookingFragment"
        android:name="com.obliviongatestudio.akthosidle.ui.cookingFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
</navigation>
