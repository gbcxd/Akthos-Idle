<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_battle">

    <fragment
        android:id="@+id/nav_battle"
        android:name="com.example.akthosidle.ui.BattleFragment"
        android:label="Battle"
        tools:layout="@layout/fragment_battle" />

    <fragment
        android:id="@+id/nav_character"
        android:name="com.example.akthosidle.ui.CharacterFragment"
        android:label="Character"
        tools:layout="@layout/fragment_character" />

    <fragment
        android:id="@+id/nav_inventory"
        android:name="com.example.akthosidle.ui.InventoryFragment"
        android:label="Inventory"
        tools:layout="@layout/fragment_inventory" />

    <!-- Skills list -->
    <fragment
        android:id="@+id/nav_skills"
        android:name="com.example.akthosidle.ui.SkillsFragment"
        android:label="Skills"
        tools:layout="@layout/fragment_skills">

        <!-- Navigate from Skills list â†’ Skill detail -->
        <action
            android:id="@+id/action_nav_skills_to_skillDetail"
            app:destination="@id/skillDetailFragment" />
    </fragment>

    <!-- Skill detail (spinner, start/cancel, progress) -->
    <fragment
        android:id="@+id/skillDetailFragment"
        android:name="com.example.akthosidle.ui.skill.SkillDetailFragment"
        android:label="Skill"
        tools:layout="@layout/fragment_skill_detail">

        <argument
            android:name="skillId"
            app:argType="string"
            android:defaultValue="MINING" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.akthosidle.ui.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/shopFragment"
        android:name="com.example.akthosidle.ui.shop.ShopFragment"
        android:label="Shop"
        tools:layout="@layout/fragment_shop"/>

    <fragment
        android:id="@+id/buyGoldFragment"
        android:name="com.example.akthosidle.ui.store.BuyGoldFragment"
        android:label="@string/buy_gold_title"
        tools:layout="@layout/fragment_buy_gold" />
</navigation>
