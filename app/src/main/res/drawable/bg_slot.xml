<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/slot_bg"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item android:width="1dp" android:height="1dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/slot_border"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
